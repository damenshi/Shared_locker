<view class="page">
  <view class="card-store-retrieve">
    <view class="title">手机号与取包码</view>
      <input placeholder="请输入手机号" type="number" maxlength="11" bindinput="onPhone" />
      <input placeholder="请输入取包码（4位数字）" type="number" maxlength="6" bindinput="onPassword" />
  </view>

  <view class="card-store-retrieve">
    <button class="btn-store-retrieve store" bindtap="goStore">存</button>
    <button class="btn-store-retrieve retrieve" bindtap="goTake">取</button>
  </view>

  <view class="card-menu">
    <button class="btn-menu" bindtap="goAdmin">管理看板</button>
    <button class="btn-menu" bindtap="goMine">我的</button>
  </view>
</view>
