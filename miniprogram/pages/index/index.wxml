<view class="page">
  <view class="card">
    <view class="title">手机号与取包码</view>
    <input placeholder="请输入手机号" type="number" maxlength="11" bindinput="onPhone" />
    <input placeholder="请输入取包码（4位数字）" type="number" maxlength="4" bindinput="onCode" />
    <button class="btn primary" bindtap="goStore">存包</button>
    <button class="btn" bindtap="goTake">取包</button>
  </view>

  <view class="card">
    <view class="title">我的订单</view>
    <button class="btn" bindtap="goOrders">查看订单列表</button>
  </view>

  <view class="card">
    <view class="title">管理入口（管理员）</view>
    <button class="btn" bindtap="goAdmin">管理看板</button>
  </view>
</view>
