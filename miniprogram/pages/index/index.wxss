.page {
  display: flex;
  flex-direction: column;
  gap: 20px;  /* 子元素间距 */
}

.card-store-retrieve {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.btn-store-retrieve {
  flex: 1;               /* 按钮均分父容器宽度 */
  aspect-ratio: 1/1;     /* 正方形 */
  margin: 5px;           /* 可选：按钮间距 */
  border-radius: 24px;    /* 可选：圆角 */
  font-size: 36px;       /* 可选：文字大小 */
  display: flex;          /* 启用 Flex 布局 */
  justify-content: center; /* 水平居中 */
  align-items: center;    /* 垂直居中 */
}

.store {
  background: #07c160;
  color:#fff;
}

.retrieve {
  background: #e6ab0b;
  color:#fff;
}

.card-menu {
  position: fixed;
  bottom: 12px;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: raw;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  border-top: 1px solid #eee;
  padding: 8px 0;
  box-shadow: 0 -2px 5px rgba(0,0,0,0.1);
}

.btn-menu {
  flex: 1;            /* 平分宽度 */
  border-radius: 0;   /* 直角按钮 */
  background-color: transparent; /* 透明背景 */
  color: #333;        /* 文字颜色 */
  font-size: 16px;    /* 文字大小 */
  justify-content: center; /* 水平居中 */
  text-align: center; /* 水平居中 */
}

/* 按钮点击态效果 */
.btn-menu:active {
  opacity: 0.6;
}
