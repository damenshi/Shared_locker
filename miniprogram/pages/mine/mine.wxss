/* pages/mine/mine.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, sans-serif;
}

/* 用户信息区域 */
.user-info {
  background: linear-gradient(135deg, #3498db, #2980b9);
  padding: 40rpx 30rpx;
  color: white;
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  overflow: hidden;
  cursor: pointer;
}

.avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.user-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.phone {
  font-size: 36rpx;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.deposit {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 15rpx;
}

/* 功能菜单 */
.menu-list {
  background-color: white;
  margin: 20rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f1f1f1;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-icon {
  margin-right: 30rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  color: #ccc;
  font-size: 36rpx;
}

/* 最近订单区域 */
.section {
  margin: 20rpx 0;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 34rpx;
  color: #333;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.order-list {
  padding: 10rpx 0;
}

.order-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.order-item:last-child {
  border-bottom: none;
}

.order-item:active {
  background-color: #f9f9f9;
}

.order-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status-success {
  color: #52c41a;
  background-color: #f6ffed;
  border: 1rpx solid #b7eb8f;
}

.status-refund {
  color: #faad14;
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
}

.status-processing {
  color: #1890ff;
  background-color: #e6f7ff;
  border: 1rpx solid #91d5ff;
}

.order-detail {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.refund-btn {
  background-color: #1890ff;
  color: white;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 4rpx;
  line-height: normal;
}

.refund-btn:active {
  background-color: #096dd9;
}

.empty {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 全额退款按钮样式 */
.refund-all-btn {
  margin-top: 10rpx;
  padding: 8rpx 20rpx;
  background-color: #ff4d4f;
  color: white;
  font-size: 24rpx;
  border-radius: 20rpx;
  line-height: normal;
  width: auto;
}

.refund-all-btn:active {
  background-color: #d93025;
}