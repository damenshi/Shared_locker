<!-- miniprogram/pages/admin/rules.wxml -->
<view class="container">
  <view class="card">
    <view class="title">当前规则</view>
    <view class="small">{{display.free}}；{{display.first}}</view>
    <view class="small">{{display.unit}}，{{display.cap}}，{{display.deposit}}</view>
  </view>

  <view class="card">
    <view class="title">修改规则</view>
    <form bindsubmit="saveRule">
      <view class="row">
        <text class="label">免费时长(分钟)</text>
        <input name="freeMinutes" value="{{rule.freeMinutes}}" type="number" />
      </view>
      <view class="row">
        <text class="label">首时段分钟</text>
        <input name="firstPeriodMinutes" value="{{rule.firstPeriodMinutes}}" type="number" />
      </view>
      <view class="row">
        <text class="label">首时段价格(分)</text>
        <input name="firstPeriodPrice" value="{{rule.firstPeriodPrice}}" type="number" />
      </view>
      <view class="row">
        <text class="label">续费单位分钟</text>
        <input name="unitMinutes" value="{{rule.unitMinutes}}" type="number" />
      </view>
      <view class="row">
        <text class="label">续费价格(分)</text>
        <input name="unitPrice" value="{{rule.unitPrice}}" type="number" />
      </view>
      <view class="row">
        <text class="label">封顶价格(分)</text>
        <input name="capPrice" value="{{rule.capPrice}}" type="number" />
      </view>
      <view class="row">
        <text class="label">押金(分)</text>
        <input name="depositPrice" value="{{rule.depositPrice}}" type="number" />
      </view>
      <button formType="submit">保存规则</button>
    </form>
  </view>
</view>
