/* pages/admin/admin.wxss */
.container {
  padding: 16px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 24px;
}

.title {
  font-size: 22px;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 14px;
  color: #666;
  margin-top: 8px;
  display: inline-block;
}

.card {
  background-color: white;
  border-radius: 10px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 16px;
  padding-bottom: 8px;
  border-bottom: 1px solid #f0f0f0;
}

.input-item {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.input-item text {
  width: 120px;
  font-size: 14px;
  color: #666;
}

.input-item input {
  flex: 1;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 0 12px;
  font-size: 14px;
}

button {
  width: 100%;
  height: 44px;
  font-size: 16px;
  border-radius: 6px;
}

.button-group {
  display: flex;
  gap: 10px;
}

.button-group button {
  flex: 1;
}

/* 二维码预览样式 */
.qrcode-preview {
  margin-top: 20px;
  padding-top: 16px;
  border-top: 1px solid #f0f0f0;
}

.preview-title {
  font-size: 14px;
  color: #666;
  margin-bottom: 12px;
  display: block;
}

.qrcode-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
}

.qrcode-item {
  width: 120px;
  text-align: center;
}

.qrcode-img {
  width: 120px;
  height: 120px;
  margin-bottom: 8px;
}

.qrcode-desc {
  font-size: 12px;
  color: #666;
  word-break: break-all;
}
