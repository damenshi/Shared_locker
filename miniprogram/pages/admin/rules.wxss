.container {
  padding: 12px;
}

.card {
  background: #fff;
  padding: 12px;
  margin-bottom: 12px;
  border-radius: 8px;
  box-shadow: 0 0 6px rgba(0,0,0,0.05);
}

.title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 8px;
}

.small {
  font-size: 14px;
  color: #666;
  margin-bottom: 4px;
}

.row {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.label {
  width: 120px;
  font-size: 14px;
  color: #333;
}

input {
  flex: 1;
  height: 32px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 8px;
}

button {
  margin-top: 12px;
  width: 100%;
  background-color: #1aad19;
  color: #fff;
  height: 36px;
  border-radius: 4px;
  text-align: center;
  line-height: 36px;
}
